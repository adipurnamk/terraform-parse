# Generated by Terraform Parse Service on {{ timestamp }}
terraform {
  required_version = ">= 1.6.0"
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }
}

provider "aws" {
  region = "{{ aws_region }}"
}

locals {
  environment  = "{{ environment }}"
  bucket_name  = "{{ bucket_name }}"
  acl          = "{{ acl }}"
  force_destroy = {{ force_destroy | lower }}
}

resource "aws_s3_bucket" "{{ bucket_resource_name }}" {
  bucket        = local.bucket_name
  force_destroy = local.force_destroy

  tags = {
    Environment = local.environment
    ManagedBy   = "terraform-parse-service"
  }
}

resource "aws_s3_bucket_acl" "{{ bucket_resource_name }}" {
  bucket = aws_s3_bucket.{{ bucket_resource_name }}.id
  acl    = local.acl
}
